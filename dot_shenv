if type log_shell_source >/dev/null 2>&1; then
  return
fi

log_shell_source(){
  if [[ -z "${LOG_SHELL_SOURCE}" ]]; then
    export LOG_SHELL_SOURCE="$1"
  else
    export LOG_SHELL_SOURCE="${LOG_SHELL_SOURCE}\n$1"
  fi
}

has_sourced(){
  echo -e "${LOG_SHELL_SOURCE}" | grep "$1" >/dev/null 2>&1
}

show_shell_source_log(){
  echo -e "${LOG_SHELL_SOURCE}"
}

log_shell_source "${HOME}/.shenv"
