[user]
	name = {{ (bitwarden "item" "github.com/porkbeans").login.username }}
	email = {{ (bitwardenFields "item" "github.com/porkbeans").email.value }}
[alias]
	a = add
	s = status
	l = log --format='format:%cd %C(auto)%H%Creset%C(auto)%d%Creset %s'
	d = diff
	dw = diff --word-diff
	dc = diff --cached
	dcw = diff --cached --word-diff
	amend = commit --amend
	root = rev-parse --show-toplevel
[log]
	date = iso-strict
[pull]
	ff = only
[init]
	defaultBranch = main
[filter "lfs"]
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f
	process = git-lfs filter-process
	required = true
