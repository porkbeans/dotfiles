[user]
	name = {{ (secretJSON "show" "github").username }}
	email = {{ (secretJSON "show" "github").email }}
[alias]
	a = add
	s = status
	l = log --oneline
	d = diff
	dw = diff --word-diff
	dc = diff --cached
	dcw = diff --cached --word-diff
	amend = commit --amend
	root = rev-parse --show-toplevel
[pull]
	ff = only
